{
  "name": "nx-reporting-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "prisma generate && next build",
    "postbuild": "prisma migrate deploy",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:api": "jest --testPathPattern=api",
    "test:deployment": "jest --testPathPattern=deployment-validation",
    "test:all": "ts-node __tests__/test-runner.ts",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:production": "ts-node __tests__/production-validation.ts",
    "test:utilities": "node lib/__tests__/utilities.test.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "db:seed": "prisma db seed",
    "db:setup": "prisma generate && prisma migrate dev",
    "vercel-build": "prisma generate && prisma migrate deploy && next build",
    "dev:setup": "npm run db:setup && npm run dev",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1"
  },
