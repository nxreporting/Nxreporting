# Development Environment Configuration
# This file is used for local development with the new Vercel + Supabase architecture

# Database Configuration (Supabase Development)
DATABASE_URL="your-supabase-database-url-here"
DATABASE_POOLER_URL="your-supabase-pooler-url-here"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url-here"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key-here"
SUPABASE_STORAGE_BUCKET="pdf-uploads"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# Storage Configuration
STORAGE_PROVIDER="vercel"  # or "supabase"

# Vercel Blob Storage (for development testing)
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token-here"

# External API Keys
NANONETS_API_KEY="your-nanonets-api-key-here"
OPENAI_API_KEY="your-openai-api-key-here"
HUGGINGFACE_API_TOKEN="your-huggingface-token-here"

# Application Configuration
NODE_ENV="development"
LOG_LEVEL="debug"
MAX_FILE_SIZE_MB="50"
VERCEL_FUNCTION_TIMEOUT="45"

# Development URLs
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Hot Reloading Configuration
FAST_REFRESH=true